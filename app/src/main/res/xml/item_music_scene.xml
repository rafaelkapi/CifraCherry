<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start"
        app:duration="350">

        <OnClick
            app:clickAction="toggle"
            app:targetId="@+id/button_more" />

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="95"
                app:motionTarget="@+id/bt_edit" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="50"
                app:motionTarget="@+id/v_divider" />

            <KeyAttribute
                android:alpha="0"
                android:scaleX="0"
                app:framePosition="10"
                app:motionTarget="@+id/container_music_more" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/container_music_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/parent"
            app:layout_constraintStart_toEndOf="@+id/button_more"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/button_more"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:rotation="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/button_more_aux"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:rotation="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/v_line"
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="25dp"
            android:alpha="0"
            android:rotation="45"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/button_more"
            app:layout_constraintTop_toTopOf="@id/button_more" />

        <Constraint
            android:id="@+id/v_line2"
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="25.5dp"
            android:alpha="0"
            android:rotation="-45"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/button_more"
            app:layout_constraintTop_toTopOf="@id/button_more" />


    </ConstraintSet>


    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/container_music_more"
            android:alpha="1"
            android:scaleX="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_more"
            app:layout_constraintStart_toEndOf="@+id/iv_musicphoto"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/button_more"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:alpha="0"
            android:rotation="45"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/button_more_aux"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:alpha="0"
            android:rotation="-45"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/v_line"
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="25dp"
            android:alpha="1"
            android:rotation="45"
            android:scaleX="1"
            android:scaleY="1"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/button_more"
            app:layout_constraintTop_toTopOf="@id/button_more" />

        <Constraint
            android:id="@+id/v_line2"
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="25.5dp"
            android:alpha="1"
            android:rotation="-45"
            android:scaleX="1"
            android:scaleY="1"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/button_more"
            app:layout_constraintTop_toTopOf="@id/button_more" />


    </ConstraintSet>

</MotionScene>
